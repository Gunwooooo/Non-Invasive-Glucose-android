<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".care.CareThermometerFullChartActivity"
    android:background="@color/toss_black_600"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/careThermometerFullChart_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/careThermometerFullChart_imageView_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/white" />
            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/ps_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:adjustViewBounds="true"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/careThermometerFullChart_imageView_calendar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="평균 체온"
            android:textColor="@color/toss_black_150"
            android:fontFamily="@font/ps_regular"/>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/careThermometerFullChart_textView_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38dp"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/ps_bold"/>

            <TextView
                android:id="@+id/careThermometerFullChart_textView_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ps_regular"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>


        <TextView
            android:gravity="bottom"
            android:id="@+id/careThermometerFullChart_textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:text=""
            android:textColor="@color/toss_black_100"
            android:fontFamily="@font/ps_regular"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/careThermometerFullChart_layout"
        android:gravity="center"
        android:background="@color/toss_black_600"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/careThermometerFullChart_scatterChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginBottom="40dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/careThermometerFullChart_lottie"
            app:lottie_rawRes="@raw/lottie_no_data_black"
            app:lottie_autoPlay="false"/>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/careThermometerFullChart_lottie_swipe"
        app:lottie_rawRes="@raw/lottie_swipe_available"
        app:lottie_autoPlay="true"/>
</LinearLayout>