            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:id="@+id/careProtectingMenu_layout_thermometer"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_layout_white_radius_20"
                        android:layout_width="0dip">
                        <LinearLayout
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:padding="24dp"
                            android:background="@drawable/ripple_white_radius_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/careProtectingMenu_imageView_thermometer"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="3dp" />

                            <TextView
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="날짜별 체온"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="18dp"
                                android:textColor="@color/toss_black_700"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/careProtectingMenu_layout_thermometerAnalysis"
                        android:layout_marginStart="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_layout_white_radius_20"
                        android:layout_width="0dip">
                        <LinearLayout
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:padding="24dp"
                            android:background="@drawable/ripple_white_radius_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/careProtectingMenu_imageView_thermometerAnalysis"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="체온 분석"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="18dp"
                                android:textColor="@color/toss_black_700"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:id="@+id/careProtectingMenu_layout_heart"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_layout_white_radius_20"
                        android:layout_width="0dip">
                        <LinearLayout
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:padding="24dp"
                            android:background="@drawable/ripple_white_radius_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/careProtectingMenu_imageView_heart"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="날짜별 심박수"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="18dp"
                                android:textColor="@color/toss_black_700"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/careProtectingMenu_layout_heartAnalysis"
                        android:layout_marginStart="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_layout_white_radius_20"
                        android:layout_width="0dip">
                        <LinearLayout
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:padding="24dp"
                            android:background="@drawable/ripple_white_radius_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/careProtectingMenu_imageView_heartAnalysis"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:padding="3dp" />

                            <TextView
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="심박수 분석"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="18dp"
                                android:textColor="@color/toss_black_700"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:id="@+id/careProtectingMenu_layout_glucose"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_layout_white_radius_20"
                        android:layout_width="0dip">
                        <LinearLayout
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:padding="24dp"
                            android:background="@drawable/ripple_white_radius_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/careProtectingMenu_imageView_glucose"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="날짜별 혈당"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="18dp"
                                android:textColor="@color/toss_black_700"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/careProtectingMenu_layout_glucoseAnalysis"
                        android:layout_marginStart="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_layout_white_radius_20"
                        android:layout_width="0dip">
                        <LinearLayout
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:padding="24dp"
                            android:background="@drawable/ripple_white_radius_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/careProtectingMenu_imageView_glucoseAnalysis"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="3dp" />

                            <TextView
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="혈당 분석"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="18dp"
                                android:textColor="@color/toss_black_700"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>