<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".care.CareProtectingMenuActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/android_blue_100"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ps_bold"
                        android:gravity="center_vertical"
                        android:text="건강 정보"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ps_regular"
                        android:gravity="center_vertical"
                        android:text="보호 대상자의\n여러 정보들을 조회할 수 있어요."
                        android:textColor="@color/iphone_gray_150"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:gravity="bottom"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/careProtectingMenu_textView_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ss"
                            android:textColor="@color/toss_black_700"
                            android:fontFamily="@font/ps_bold"
                            android:textSize="21dp"/>
                        <LinearLayout
                            android:focusable="false"
                            android:clickable="false"
                            android:gravity="center"
                            android:background="@drawable/background_layout_toss_black_100_radius_20"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/careProtectingMenu_textView_age"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="    세"
                                android:textColor="@color/iphone_gray_500"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="18dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="end|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@drawable/background_white_ring_shape"
                        android:padding="5dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:adjustViewBounds="true"
                            android:id="@+id/careProtectingMenu_imageView_profile"

                            android:scaleType="fitEnd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

