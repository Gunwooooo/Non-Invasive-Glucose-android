<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white_radius_20"
    android:padding="16dp"
    android:backgroundTint="@color/android_blue_100">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textSize="18dp"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/toss_black_700"/>

        <EditText
            android:id="@+id/homeAccountModifyPasswordDialog_editText_curPassword"
            android:layout_marginTop="16dp"
            android:hint="현재 비밀번호"
            android:paddingStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="18dp"
            android:importantForAutofill="no"
            android:background="@drawable/selector_color_edittext"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/homeAccountModifyPasswordDialog_editText_newPassword"
            android:layout_marginTop="10dp"
            android:hint="새 비밀번호"
            android:paddingStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="18dp"
            android:importantForAutofill="no"
            android:background="@drawable/selector_color_edittext"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/homeAccountModifyPasswordDialog_editText_checkPassword"
            android:layout_marginTop="10dp"
            android:hint="새 비밀번호 확인"
            android:paddingStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="18dp"
            android:importantForAutofill="no"
            android:imeOptions="actionNext"
            android:background="@drawable/selector_color_edittext"
            android:inputType="textPassword"/>

        <TextView
            android:padding="3dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="13dp"
            android:text="❗영문자, 특수문자, 숫자 3개를 조합하여 8자리 이상 입력해 주세요."
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/toss_black_500"/>

<!--        <TextView-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:gravity="center"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="* 해당 약의 오늘 복용 정보가 삭제됩니다."-->
<!--            android:textSize="18dp"-->
<!--            android:fontFamily="@font/ps_bold"-->
<!--            android:textColor="@color/text_red_200"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">

            <Button
                android:id="@+id/homeAccountModifyPasswordDialog_btn_negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_gray_reverse"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="취소"
                android:textColor="@color/toss_black_200"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.04"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeAccountModifyPasswordDialog_btn_positive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_blue"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="변경하기"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>