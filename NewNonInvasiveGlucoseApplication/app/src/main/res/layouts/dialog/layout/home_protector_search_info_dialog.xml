<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white_radius_20"
    android:padding="16dp"
    android:backgroundTint="@color/android_blue_100">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="해당 사용자가 맞나요?"
            android:textSize="24dp"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/toss_black_700"/>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/homeProtectorSearchInfoDialog_imageView_profile"
                android:layout_gravity="bottom"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/homeProtectorSearchInfoDialog_textView_nickName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ps_bold"
                android:gravity="center_vertical"
                android:text="         "
                android:textColor="@color/toss_black_700"
                android:textSize="21dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="16dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/icon_no_color_birthday"
                app:tint="@color/toss_black_170" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/homeProtectorSearchInfoDialog_textView_age"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/toss_black_170"
                android:fontFamily="@font/ps_regular"
                android:textSize="21dp"/>


            <ImageView
                android:layout_marginStart="16dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/icon_no_color_gender"
                app:tint="@color/toss_black_170" />

            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/homeProtectorSearchInfoDialog_textView_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/toss_black_170"
                android:fontFamily="@font/ps_regular"
                android:textSize="21dp"/>

            <ImageView
                android:layout_marginStart="16dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/icon_no_color_phone"
                app:tint="@color/toss_black_170" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/homeProtectorSearchInfoDialog_textView_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/toss_black_170"
                android:fontFamily="@font/ps_regular"
                android:textSize="21dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보호자로 등록 시, 해당 사용자가 내 건강정보를 조회할 수 있습니다."
        android:textSize="15dp"
        android:fontFamily="@font/ps_bold"
        android:textColor="@color/text_red_200"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeProtectorSearchInfoDialog_btn_negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_gray_reverse"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="아니요"
                android:textColor="@color/toss_black_200"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.04"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeProtectorSearchInfoDialog_btn_positive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_blue"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="예"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>