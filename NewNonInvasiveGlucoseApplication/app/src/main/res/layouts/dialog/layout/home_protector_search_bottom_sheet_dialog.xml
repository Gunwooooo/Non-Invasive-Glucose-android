<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="보호자 검색"
            android:fontFamily="@font/ps_bold"
            android:textSize="18dp"
            android:textColor="@color/toss_black_700"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/homeProtectorSearchBottomSheetDialog_editText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="16dp"
            android:background="@drawable/selector_color_edittext"
            android:drawableEnd="@drawable/ic_baseline_search_24"
            android:fontFamily="@font/ps_regular"
            android:hint="보호자 전화번호를 입력해주세요('-'없이)"
            android:imeOptions="actionSearch"
            android:inputType="phone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="18dp" >
            <requestFocus/>
        </EditText>
    </LinearLayout>

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="16dp">-->
<!--    </LinearLayout>-->
</LinearLayout>