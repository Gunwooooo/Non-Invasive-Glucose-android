<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/android_blue_100"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <com.factor.bouncy.BouncyNestedScrollView
        android:id="@+id/home_bouncyNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        app:fling_animation_size=".8"
        app:overscroll_animation_size=".8"
        app:layout_constraintBottom_toTopOf="@id/home_bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            tools:context=".home.HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/android_blue_100">

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connect me with health"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ps_bold"
                        android:textSize="21dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="웰링크와 함께 건강관리를 해보세요"
                        android:textColor="@color/iphone_gray_150"
                        android:fontFamily="@font/ps_regular"
                        android:textSize="14dp" />
                    <TextView
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="내 정보"
                        android:textColor="@color/toss_black_700"
                        android:fontFamily="@font/ps_bold"
                        android:textSize="21dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/ripple_android_blue_100_radius_20"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/home_imageView_setting"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_baseline_settings_24"
                            app:tint="@color/black" />
                    </LinearLayout>
                    <ImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/home_imageView_dashBoard_background"
                        android:background="@color/android_blue_100"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/background_layout_white_radius_20"
                android:layout_width="match_parent"
                android:layout_height="96dp">
                <LinearLayout
                    android:layout_margin="2dp"
                    android:paddingStart="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/home_btn_account"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_white_radius_20">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/home_imageView_profile"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center" />
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_textView_nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ps_bold"
                                    android:gravity="center_vertical"
                                    android:text="         "
                                    android:textColor="@color/toss_black_700"
                                    android:textSize="18dp" />

                                <LinearLayout
                                    android:focusable="false"
                                    android:clickable="false"
                                    android:gravity="center"
                                    android:layout_marginStart="16dp"
                                    android:background="@drawable/background_layout_toss_black_100_radius_20"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/home_textView_age"
                                        android:gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="    세"
                                        android:textColor="@color/iphone_gray_500"
                                        android:fontFamily="@font/ps_regular"
                                        android:textSize="18dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/home_textView_sex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/toss_black_200"
                                    android:fontFamily="@font/ps_regular"
                                    android:textSize="16dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요약"
                        android:textColor="@color/toss_black_700"
                        android:fontFamily="@font/ps_bold"
                        android:textSize="21dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:background="@drawable/background_layout_white_radius_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/home_imageView_clock"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        app:tint="@color/circle_red_100" />
                    <Chronometer
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:id="@+id/home_chronometer_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ps_bold"
                        android:textColor="@color/toss_black_500"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/home_linearLayout_disconnected"
                        android:layout_marginEnd="8dp"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/home_layout_reconnect"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:gravity="center"
                            android:background="@drawable/ripple_android_blue_100_radius_20"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/background_white_ring_shape">
                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:background="@drawable/background_toss_black_200_ring_shape" />
                            </FrameLayout>

                            <TextView
                                android:gravity="center"
                                android:layout_marginStart="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="연결하기"
                                android:textSize="16dp"
                                android:fontFamily="@font/ps_regular"
                                android:textColor="@color/toss_black_500"/>

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_marginStart="4dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/home_lottie_refresh"
                                app:lottie_rawRes="@raw/lottie_refresh"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/home_linearLayout_connected"
                        android:layout_marginEnd="8dp"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/background_iphone_green_100_ring_shape">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/background_iphone_green_200_ring_shape" />
                        </FrameLayout>

                        <TextView
                            android:gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="연결됨"
                            android:textSize="16dp"
                            android:fontFamily="@font/ps_regular"
                            android:textColor="@color/toss_black_500"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="48dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3333">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:gravity="center"
                                android:id="@+id/home_textView_thermometerSummary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ps_bold"
                                android:text="-"
                                android:textColor="@color/toss_black_600"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ps_regular"
                                android:text="체온(℃)"
                                android:textColor="@color/toss_black_150"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3333">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:gravity="center"
                                android:id="@+id/home_textView_heartSummary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ps_bold"
                                android:text="-"
                                android:textColor="@color/toss_black_600"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ps_regular"
                                android:text="심박수(BPM)"
                                android:textColor="@color/toss_black_150"
                                android:textSize="16dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3333">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/home_textView_glucoseSummary"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ps_bold"
                                android:text="-"
                                android:textColor="@color/toss_black_600"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ps_regular"
                                android:text="혈당(mg/dL)"
                                android:textColor="@color/toss_black_150"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실시간 차트"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="21dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/background_layout_white_radius_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ps_bold"
                                    android:gravity="bottom"
                                    android:text="체온"
                                    android:textColor="@color/toss_black_500"
                                    android:textSize="21dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="end"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2">
                                <TextView
                                    android:background="@drawable/ripple_white_radius_20"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/home_textView_thermometerDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ps_regular"
                                    android:gravity="center"
                                    android:text="분석"
                                    android:textColor="@color/toss_blue_700"
                                    android:textSize="16dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.github.mikephil.charting.charts.LineChart
                            android:layout_margin="16dp"
                            android:id="@+id/home_thermometerChart"
                            android:layout_width="match_parent"
                            android:layout_height="256dp"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:background="@color/android_blue_100" />

                        <LinearLayout
                            android:layout_margin="2dp"
                            android:id="@+id/home_btn_thermometer"
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:background="@drawable/ripple_white_radius_bottom_20"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.15"
                                android:background="@drawable/background_teal_700_ring_shape">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="8dp"
                                    android:src="@drawable/icon_no_color_thermometer"
                                    app:tint="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.04" />

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.41"
                                android:orientation="vertical"
                                android:padding="1dp"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ps_bold"
                                    android:gravity="center_vertical"
                                    android:text="Daily 차트 보기"
                                    android:textColor="@color/toss_black_700"
                                    android:textSize="18dp" />
                            </LinearLayout>

<!--                            <LinearLayout-->
<!--                                android:layout_width="0dip"-->
<!--                                android:layout_height="match_parent"-->
<!--                                android:layout_weight="0.15">-->
<!--                            </LinearLayout>-->

                            <LinearLayout
                                android:gravity="end"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.39"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_textView_thermometerValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ps_bold"
                                    android:gravity="center_vertical|end"
                                    android:text="-"
                                    android:textColor="@color/toss_black_600"
                                    android:textSize="21dp" />


                                <TextView
                                    android:layout_width="32dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/ps_regular"
                                    android:gravity="center_vertical|end"
                                    android:text="℃"
                                    android:textColor="@color/toss_black_170"
                                    android:textSize="14dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--    <LinearLayout-->
            <!--        android:layout_marginTop="16dp"-->
            <!--        android:gravity="center"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content">-->
            <!--        <com.airbnb.lottie.LottieAnimationView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="180dp"-->
            <!--            app:lottie_rawRes="@raw/medical_lottie"-->
            <!--            app:lottie_autoPlay="false"/>-->
            <!--    </LinearLayout>-->

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/background_layout_white_radius_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ps_bold"
                                    android:gravity="bottom"
                                    android:text="심박수"
                                    android:textColor="@color/toss_black_500"
                                    android:textSize="21dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="end"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2">
                                <TextView
                                    android:background="@drawable/ripple_white_radius_20"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/home_textView_heartDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ps_regular"
                                    android:gravity="center"
                                    android:text="분석"
                                    android:textColor="@color/toss_blue_700"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <com.github.mikephil.charting.charts.LineChart
                            android:layout_margin="16dp"
                            android:id="@+id/home_heartChart"
                            android:layout_width="match_parent"
                            android:layout_height="256dp"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:background="@color/android_blue_100" />
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:padding="16dp"
                            android:background="@drawable/ripple_white_radius_bottom_20"
                            android:id="@+id/home_btn_heart"
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:weightSum="1">
                            <LinearLayout
                                android:background="@drawable/background_text_red_200_ring_shape"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.15">
                                <ImageView
                                    android:padding="13dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/icon_no_color_heart"
                                    app:tint="@color/white" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.04"/>
                            <LinearLayout
                                android:padding="1dp"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.41"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <TextView
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Daily 차트 보기"
                                    android:fontFamily="@font/ps_bold"
                                    android:textSize="18dp"
                                    android:textColor="@color/toss_black_700"/>
                            </LinearLayout>
<!--                            <LinearLayout-->
<!--                                android:layout_width="0dip"-->
<!--                                android:layout_height="match_parent"-->
<!--                                android:layout_weight="0.15">-->
