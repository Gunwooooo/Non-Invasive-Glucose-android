<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserSetNicknameFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="16dp"
    android:background="@color/android_blue_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/ps_bold"
        android:text="닉네임을 입력해주세요."
        android:textColor="@color/toss_black_700"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/userSetNickname_editText_nickname"
        android:hint="닉네임"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:textSize="18dp"
        android:importantForAutofill="no"
        android:background="@drawable/selector_color_edittext"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:privateImeOptions="defaultInputmode=korean">
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/userSetNickname_btn_next"
        android:layout_marginTop="12dp"
        android:text="확인"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:stateListAnimator="@null"
        android:enabled="false"
        android:background="@drawable/btn_border_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>

</LinearLayout>
