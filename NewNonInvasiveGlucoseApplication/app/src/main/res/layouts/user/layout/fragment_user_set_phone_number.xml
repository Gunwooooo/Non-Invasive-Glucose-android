<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserSetPhoneNumberFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="16dp"
    android:background="@color/android_blue_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/ps_bold"
        android:text="환영합니다!\n휴대전화 번호를 입력해 주세요."
        android:textColor="@color/toss_black_700"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/userSetPhoneNumber_editText_phoneNumber"
        android:hint="휴대전화 번호"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:textSize="18dp"
        android:importantForAutofill="no"
        android:background="@drawable/selector_color_edittext"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:focusableInTouchMode="true">
        <requestFocus/>
    </EditText>


    <Button
        android:id="@+id/userSetPhoneNumber_btn_next"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_border_blue"
        android:enabled="false"
        android:fontFamily="@font/ps_bold"
        android:stateListAnimator="@null"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>

</LinearLayout>
