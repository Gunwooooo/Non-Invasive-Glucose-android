<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NonInvasiveGlucoseApplication" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toss_blue_200</item>
        <item name="colorPrimaryVariant">@color/toss_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/toss_blue_200</item>
<!--        <item name="android:datePickerStyle">@style/CustomDatePicker</item>-->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.NonInvasiveGlucoseApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    데이터 피커 스타일 : 스피너-->
<!--    <style name="CustomDatePicker">-->
<!--        <item name="android:datePickerMode">spinner</item>-->
<!--    </style>-->

<!--    탭 텍스트 크기 조절-->
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">21dp</item>
        <item name="android:fontFamily">@font/ps_bold</item>
    </style>

<!--    툴바 텍스트 사이즈 조절-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/ps_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

<!--    툴바 아이콘 칼라 설정-->
    <style name="ToolbarColoredIcon" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

<!--    바텀 다이어로그 테마-->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_radius_border</item>
    </style>
</resources>