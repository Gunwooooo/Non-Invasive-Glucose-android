<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NonInvasiveGlucoseApplication" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/iphone_green_200</item>
        <item name="colorPrimaryVariant">@color/iphone_green_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/android_blue_100</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/iphone_green_200</item>
<!--        <item name="android:datePickerStyle">@style/CustomDatePicker</item>-->

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.NonInvasiveGlucoseApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

