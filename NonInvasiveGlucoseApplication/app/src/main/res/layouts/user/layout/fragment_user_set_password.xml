<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserSetPasswordFragment"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/ps_bold"
        android:text="비밀번호를\n설정해주세요."
        android:textColor="@color/toss_black_700"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/userSetPassword_editText_password"
        android:hint="비밀번호"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:textSize="22dp"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:background="@drawable/user_edittext_border">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/userSetPassword_editText_passwordCheck"
        android:layout_marginTop="15dp"
        android:hint="비밀번호 확인"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:textSize="22dp"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:background="@drawable/user_edittext_border">
    </EditText>
    <Button
        android:id="@+id/userSetPassword_btn_next"
        android:layout_marginTop="15dp"
        android:text="다음"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:enabled="false"
        android:background="@drawable/btn_border_light_gray"/>

    <TextView
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:textSize="16dp"
        android:text="❗영문자, 특수문자, 숫자 3개를 조합하여 8자리 이상 입력해 주세요."
        android:fontFamily="@font/ps_bold"
        android:textColor="@color/toss_blue_200"
        android:background="@drawable/user_textview_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>
</LinearLayout>