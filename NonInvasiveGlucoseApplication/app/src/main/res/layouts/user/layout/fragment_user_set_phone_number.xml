<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserSetPhoneNumberFragment"
    android:orientation="vertical"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.25"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/ps_bold"
            android:text="환영합니다!\n휴대전화 번호를 입력해 주세요."
            android:textColor="@color/toss_black_700"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.11">

        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:importantForAutofill="no"
            android:inputType="number">

            <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2">
        <Button
            android:id="@+id/user_btn_setPhoneNumber"
            android:layout_marginTop="5dp"
            android:layout_gravity="top"
            android:text="확인"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ps_bold"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:stateListAnimator="@null"
            android:background="@drawable/btn_border_blue"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.29"/>

</LinearLayout>