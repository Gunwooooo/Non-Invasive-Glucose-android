<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserCheckPasswordFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/ps_bold"
        android:text="비밀번호를 입력해주세요."
        android:textColor="@color/white"
        android:textSize="22dp" />

    <EditText
        android:clickable="false"
        android:focusable="false"
        android:id="@+id/userCheckPassword_editText_phoneNumber"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:textSize="22dp"
        android:importantForAutofill="no"
        android:background="@drawable/user_edittext_border">
    </EditText>

    <EditText
        android:id="@+id/userCheckPassword_editText_password"
        android:layout_marginTop="15dp"
        android:hint="비밀번호"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:textSize="22dp"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:background="@drawable/user_edittext_border">
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/userCheckPassword_btn_next"
        android:layout_marginTop="15dp"
        android:text="로그인"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:enabled="false"
        android:background="@drawable/btn_border_blue"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_weight="0.7"
            android:gravity="start|center_vertical"
            android:layout_width="0dip"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/userCheckPassword_textView_forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ps_regular"
                android:text="비밀번호를 잊어버리셨나요?"
                android:textColor="@color/iphone_green_500"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userCheckPassword_btn_autoLogin"
            android:layout_weight="0.3"
            android:gravity="end"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/iphone_green_500"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ps_regular"
                android:text="자동로그인"
                android:textColor="@color/iphone_green_500"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>
</LinearLayout>