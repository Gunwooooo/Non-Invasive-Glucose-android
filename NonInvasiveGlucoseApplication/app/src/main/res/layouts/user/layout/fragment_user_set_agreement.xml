<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserSetAgreementFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/ps_bold"
        android:text="마지막 단계에요!\n약관에 동의해 주세요."
        android:textColor="@color/toss_black_700"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/userSetAgreement_checkBox_agreement1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userSetAgreement_textView_agreement1"
            android:layout_marginStart="13dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/이용약관"
            android:fontFamily="@font/ps_regular"
            android:textSize="18dp"
            android:textColor="@color/toss_black_700"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/userSetAgreement_checkBox_agreement2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userSetAgreement_textView_agreement2"
            android:layout_marginStart="13dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/개인정보처리방침"
            android:fontFamily="@font/ps_regular"
            android:textSize="18dp"
            android:textColor="@color/toss_black_700"/>
    </LinearLayout>

    <Button
        android:id="@+id/userSetAgreement_btn_agreeAll"
        android:layout_marginTop="15dp"
        android:text="모두 동의"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:enabled="true"
        android:background="@drawable/btn_border_gray"/>

    <Button
        android:id="@+id/userSetAgreement_btn_next"
        android:layout_marginTop="15dp"
        android:text="완료"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:enabled="false"
        android:background="@drawable/btn_border_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>

</LinearLayout>