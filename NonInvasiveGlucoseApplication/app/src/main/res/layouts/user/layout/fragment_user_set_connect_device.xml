<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserSetConnectDeviceFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/android_blue_100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/ps_bold"
        android:text="장치를 연결할게요!\n장치의 전원을 켜고 연결하기 버튼을\n눌러주세요."
        android:textColor="@color/toss_black_700"
        android:textSize="22dp" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/main_lottie"
        app:lottie_rawRes="@raw/lottie_bluetooth_connect"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


    <Button
        android:id="@+id/userSetConnectDevice_btn_next"
        android:layout_marginTop="15dp"
        android:text="연결하기"
        android:textSize="22dp"
        android:textColor="@color/iphone_green_200"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:background="@drawable/btn_border_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>

</LinearLayout>