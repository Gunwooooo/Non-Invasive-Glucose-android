<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserSetBirthdayFragment"
    android:orientation="vertical"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/ps_bold"
        android:text="생년월일을\n입력해주세요."
        android:textColor="@color/toss_black_700"
        android:textSize="22dp" />


    <LinearLayout
        android:id="@+id/userSetBirthday_btn_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/userSetBirthday_textView_year"
            android:gravity="center"
            android:text="- - - - 년"
            android:paddingStart="16dp"
            android:layout_width="0dip"
            android:layout_weight="0.4"
            android:layout_height="63dp"
            android:textSize="22dp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_black_700"
            android:background="@drawable/user_edittext_border"/>
        <TextView
            android:id="@+id/userSetBirthday_textView_month"
            android:gravity="center"
            android:text="- - 월"
            android:layout_marginStart="8dp"
            android:paddingStart="16dp"
            android:layout_width="0dip"
            android:layout_weight="0.3"
            android:layout_height="63dp"
            android:textSize="22dp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_black_700"
            android:background="@drawable/user_edittext_border"/>
        <TextView
            android:id="@+id/userSetBirthday_textView_day"
            android:gravity="center"
            android:text="- - 일"
            android:layout_marginStart="8dp"
            android:paddingStart="16dp"
            android:layout_width="0dip"
            android:layout_weight="0.3"
            android:layout_height="63dp"
            android:textSize="22dp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_black_700"
            android:background="@drawable/user_edittext_border"/>
    </LinearLayout>

    <Button
        android:id="@+id/userSetBirthday_btn_next"
        android:layout_marginTop="15dp"
        android:text="다음"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:background="@drawable/btn_border_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>

</LinearLayout>