<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserSetNicknameFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/ps_bold"
        android:text="닉네임을 입력해주세요."
        android:textColor="@color/toss_black_700"
        android:textSize="22dp" />


    <EditText
        android:id="@+id/userSetNickname_editText_nickname"
        android:hint="닉네임"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:textSize="22dp"
        android:importantForAutofill="no"
        android:background="@drawable/user_edittext_border"
        android:inputType="text"
        android:privateImeOptions="defaultInputmode=korean">
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/userSetNickname_btn_next"
        android:layout_marginTop="15dp"
        android:text="확인"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:enabled="false"
        android:background="@drawable/btn_border_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>

</LinearLayout>
