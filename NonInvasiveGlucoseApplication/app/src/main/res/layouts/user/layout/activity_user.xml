<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/android_blue_100">

    <ProgressBar
        android:progressTint="@color/iphone_blue_500"
        android:id="@+id/user_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>


    <ImageView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/user_imageView_back"
        android:background="@drawable/ripple_android_blue_100_radius_20"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/toss_black_700" />


    <FrameLayout
        android:layout_margin="16dp"
        android:id="@+id/user_frameId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>