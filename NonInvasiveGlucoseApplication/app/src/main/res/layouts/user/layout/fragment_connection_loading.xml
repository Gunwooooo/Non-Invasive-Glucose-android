<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ConnectionLoadingFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/android_blue_100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"/>

    <TextView
        android:id="@+id/connectionLoading_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/ps_bold"
        android:text="연결을 완료했습니다.\n시작하기를 눌러주세요!"
        android:textColor="@color/toss_black_700"
        android:textSize="22dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/connectionLoading_lottie"
        app:lottie_rawRes="@raw/lottie_start"/>

    <Button
        android:id="@+id/connectionLoading_btn_next"
        android:layout_marginTop="15dp"
        android:text="시작하기"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ps_bold"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:enabled="true"
        android:background="@drawable/btn_border_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"/>

</LinearLayout>