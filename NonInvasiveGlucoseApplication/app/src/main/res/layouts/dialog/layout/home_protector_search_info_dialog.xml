<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_border20"
    android:padding="16dp"
    android:backgroundTint="@color/white">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="해당 사용자를 보호자로 등록할까요?"
            android:textSize="21dp"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/toss_black_700"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임 : "
                android:textSize="21dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_500"/>
            <TextView
                android:id="@+id/homeProtectorSearchInfo_textView_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OOO"
                android:textSize="21dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_500"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이 : "
                android:textSize="21dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_500"/>

            <TextView
                android:id="@+id/homeProtectorSearchInfo_textView_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OO세"
                android:textSize="21dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_500"/>
        </LinearLayout>




        <TextView
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보호자로 등록 시, 해당 사용자가 내 건강정보를 조회할 수 있습니다."
            android:textSize="15dp"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/text_red_200"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeProtectorSearchInfo_btn_negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_gray_reverse"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="아니요"
                android:textColor="@color/toss_black_200"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.04"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeProtectorSearchInfo_btn_positive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_blue"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="예"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>