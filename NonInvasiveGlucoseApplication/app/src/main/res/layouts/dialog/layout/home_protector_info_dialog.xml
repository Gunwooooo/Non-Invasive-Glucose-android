<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white_radius_10"
    android:padding="16dp"
    android:backgroundTint="@color/android_blue_100">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.pavlospt.roundedletterview.RoundedLetterView
                android:id="@+id/homeProtectorInfoDialog_rlv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:rlv_backgroundColorValue="@color/iphone_blue_500"
                app:rlv_titleColor="@android:color/white"
                app:rlv_titleSize="48dp"
                app:rlv_titleText="" />
            <ImageView
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:id="@+id/homeProtectorInfoDialog_imageView_profile"
                android:layout_gravity="bottom"
                android:src="@drawable/icon_color_profile"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/homeProtectorInfoDialog_textView_nickName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ps_bold"
                android:gravity="center_vertical"
                android:text="         "
                android:textColor="@color/toss_black_700"
                android:textSize="21dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="16dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/icon_no_color_birthday"
                app:tint="@color/toss_black_170" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/homeProtectorInfoDialog_textView_age"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/toss_black_170"
                android:fontFamily="@font/ps_regular"
                android:textSize="21dp"/>


            <ImageView
                android:layout_marginStart="16dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/icon_no_color_gender"
                app:tint="@color/toss_black_170" />

            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/homeProtectorInfoDialog_textView_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/toss_black_170"
                android:fontFamily="@font/ps_regular"
                android:textSize="21dp"/>

            <ImageView
                android:layout_marginStart="16dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/icon_no_color_phone"
                app:tint="@color/toss_black_170" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/homeProtectorInfoDialog_textView_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/toss_black_170"
                android:fontFamily="@font/ps_regular"
                android:textSize="21dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <Button
            android:id="@+id/homeProtectorInfoDialog_btn_positive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_border_blue"
            android:fontFamily="@font/ps_regular"
            android:stateListAnimator="@null"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>