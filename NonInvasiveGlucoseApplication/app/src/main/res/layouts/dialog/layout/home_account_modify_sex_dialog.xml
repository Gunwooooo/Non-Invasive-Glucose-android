<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_border20"
    android:padding="16dp"
    android:backgroundTint="@color/white">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/homeAccountModifySexDialog_btn_female"
            android:text="여성"
            android:textSize="22dp"
            android:textColor="@color/toss_black_500"
            android:fontFamily="@font/ps_bold"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:stateListAnimator="@null"
            android:enabled="true"
            android:background="@drawable/btn_border_gray_reverse"/>

        <Button
            android:id="@+id/homeAccountModifySexDialog_btn_male"
            android:layout_marginTop="15dp"
            android:text="남성"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ps_bold"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:stateListAnimator="@null"
            android:enabled="false"
            android:background="@drawable/btn_border_gray_reverse"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeAccountModifySexDialog_btn_negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_gray_reverse"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="취소"
                android:textColor="@color/toss_black_200"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.04"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeAccountModifySexDialog_btn_positive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_blue"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="예"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>