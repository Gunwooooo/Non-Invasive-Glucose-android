<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFullChartActivity"
    android:background="@color/android_blue_100"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ripple_android_blue_100_radius_20"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/homeFullChart_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/toss_black_500" />
        <TextView
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Home"
            android:textColor="@color/toss_black_700"
            android:textSize="18dp"
            android:fontFamily="@font/ps_regular"/>
    </LinearLayout>

    <LinearLayout
        android:paddingStart="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48dp"
            android:text="36.7"
            android:textColor="@color/toss_black_600"
            android:fontFamily="@font/ps_bold"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="2023.01.10 - 실시간 체온(℃)"
            android:textColor="@color/toss_black_200"
            android:fontFamily="@font/ps_regular"/>



    </LinearLayout>
    <LinearLayout
        android:background="@color/android_blue_100"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.7">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/homeFullChart_lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_no_color_swiping"
            app:tint="@color/toss_black_600" />
    </LinearLayout>

</LinearLayout>