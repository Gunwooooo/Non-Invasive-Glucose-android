<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeDashboardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/android_blue_100">

    <LinearLayout
        android:background="@drawable/ripple_android_blue_100_radius_20"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/homeThermometer_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/toss_black_500" />
        <TextView
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Home"
            android:textColor="@color/toss_black_700"
            android:textSize="18dp"
            android:fontFamily="@font/ps_regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="체온 데이터"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="21dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ps_bold"
                    android:gravity="bottom"
                    android:text="평균 체온"
                    android:textColor="@color/toss_black_700"
                    android:textSize="21dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="end|bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="185dp"
                android:src="@drawable/background_image_detail"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/background_layout_white_radius_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.gigamole.navigationtabstrip.NavigationTabStrip
                    android:id="@+id/homeThermometer_nts_averageChart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    app:nts_animation_duration="300"
                    app:nts_color="@color/toss_blue_200"
                    app:nts_active_color="@color/toss_blue_200"
                    app:nts_corners_radius="1.5dp"
                    app:nts_gravity="bottom"
                    app:nts_size="18dp"
                    app:nts_titles="@array/period"
                    app:nts_type="point"
                    app:nts_typeface="@font/ps_regular"
                    app:nts_weight="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/ps_regular"
                    android:gravity="center"
                    android:text="2022.01.23 ~ 2022.08.23"
                    android:textColor="@color/toss_black_700"
                    android:textSize="18dp" />

                <com.github.mikephil.charting.charts.CombinedChart
                    android:id="@+id/homeThermometer_averageChart"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:layout_margin="16dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/android_blue_100" />

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ps_regular"
                    android:text="2022.10.07"
                    android:textColor="@color/toss_black_700"
                    android:textSize="21dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:background="@drawable/ripple_white_radius_20"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ps_regular"
                            android:text="최고 온도(℃)"
                            android:textColor="@color/toss_black_500"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/homeThermometer_textView_maxValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ps_regular"
                                android:text="37.7"
                                android:textColor="@color/text_red_200"
                                android:textSize="30dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ps_regular"
                            android:text="최저 온도(℃)"
                            android:textColor="@color/toss_black_500"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/homeThermometer_textView_minValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ps_regular"
                                android:text="34.6"
                                android:textColor="@color/text_blue_200"
                                android:textSize="30dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="정상 체온"
            android:textColor="@color/toss_black_700"
            android:fontFamily="@font/ps_bold"
            android:textSize="21dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:text="최근 "
            android:textColor="@color/toss_black_500"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:text="7"
            android:textColor="@color/toss_blue_200"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:text="일 총 빈도수"
            android:textColor="@color/toss_black_500"
            android:textSize="18dp" />

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:text="64"
            android:textColor="@color/circle_red_100"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/background_layout_white_radius_20"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.gigamole.navigationtabstrip.NavigationTabStrip
                android:id="@+id/homeThermometer_nts_abnormalChart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                app:nts_animation_duration="300"
                app:nts_color="@color/toss_blue_200"
                app:nts_active_color="@color/toss_blue_200"
                app:nts_corners_radius="1.5dp"
                app:nts_gravity="bottom"
                app:nts_size="18dp"
                app:nts_titles="@array/period"
                app:nts_type="point"
                app:nts_typeface="@font/ps_regular"
                app:nts_weight="3dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ps_regular"
                android:gravity="center"
                android:text="2022.01.23 ~ 2022.08.23"
                android:textColor="@color/toss_black_700"
                android:textSize="18dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:layout_margin="16dp"
                android:id="@+id/homeThermometer_normalChart"
                android:layout_width="match_parent"
                android:layout_height="256dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="비정상 체온"
            android:textColor="@color/toss_black_700"
            android:fontFamily="@font/ps_bold"
            android:textSize="21dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:text="최근 "
            android:textColor="@color/toss_black_500"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:text="7"
            android:textColor="@color/toss_blue_200"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:text="일 총 빈도수"
            android:textColor="@color/toss_black_500"
            android:textSize="18dp" />

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:text="23"
            android:textColor="@color/circle_red_100"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/background_layout_white_radius_20"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.gigamole.navigationtabstrip.NavigationTabStrip
                android:id="@+id/homeThermometer_nts_normalChart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                app:nts_animation_duration="300"
                app:nts_color="@color/toss_blue_200"
                app:nts_active_color="@color/toss_blue_200"
                app:nts_corners_radius="1.5dp"
                app:nts_gravity="bottom"
                app:nts_size="18dp"
                app:nts_titles="@array/period"
                app:nts_type="point"
                app:nts_typeface="@font/ps_regular"
                app:nts_weight="3dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ps_regular"
                android:gravity="center"
                android:text="2022.01.23 ~ 2022.08.23"
                android:textColor="@color/toss_black_700"
                android:textSize="18dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:layout_margin="16dp"
                android:id="@+id/homeThermometer_abnormalChart"
                android:layout_width="match_parent"
                android:layout_height="256dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>
