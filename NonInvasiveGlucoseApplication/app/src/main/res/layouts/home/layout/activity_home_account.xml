<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeAccountActivity"
    android:orientation="vertical"
    android:weightSum="1">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/homeAccount_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>

    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/homeAccount_textView_title"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 페이지"
        android:fontFamily="@font/ps_bold"
        android:textSize="24dp"
        android:textColor="@color/toss_black_700"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.05"/>

    <androidx.cardview.widget.CardView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7199님"
            android:textColor="@color/toss_black_700"
            android:fontFamily="@font/ps_regular"
            android:textSize="32dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:contentPadding="24dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.25">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="남성"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_regular"
                    android:textSize="24dp"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/toss_black_150" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.25">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="남성"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_regular"
                    android:textSize="24dp"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/toss_black_150" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.25">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="남성"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_regular"
                    android:textSize="24dp"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/toss_black_150" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.25">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1995년 2월 9일"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_regular"
                    android:textSize="24dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>