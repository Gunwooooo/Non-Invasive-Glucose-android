<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeAccountActivity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/android_blue_100">
    <LinearLayout
        android:background="@drawable/ripple_android_blue_100_radius_20"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/homeAccount_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/homeAccount_imageView_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/toss_black_500" />
        <TextView
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Home"
            android:textColor="@color/toss_black_700"
            android:textSize="18dp"
            android:fontFamily="@font/ps_regular"/>
    </LinearLayout>


    <com.factor.bouncy.BouncyNestedScrollView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fling_animation_size=".8"
        app:overscroll_animation_size=".8"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/homeAccount_imageView_profile"
                    android:layout_gravity="bottom"
                    android:layout_width="96dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/homeAccount_textView_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OOO"
                            android:textColor="@color/toss_black_500"
                            android:fontFamily="@font/ps_bold"
                            android:textSize="21dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="님"
                            android:textColor="@color/toss_black_700"
                            android:fontFamily="@font/ps_bold"
                            android:textSize="21dp"/>
                        <TextView
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:id="@+id/homeAccount_textView_modifyNickname"
                            android:layout_marginStart="32dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="변경"
                            android:textColor="@color/toss_blue_200"
                            android:fontFamily="@font/ps_regular"
                            android:textSize="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가입날짜"
                            android:textColor="@color/toss_black_200"
                            android:fontFamily="@font/ps_regular"
                            android:textSize="16dp"/>
                        <TextView
                            android:id="@+id/homeAccount_textView_createdDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YYYY-MM-dd"
                            android:textColor="@color/toss_black_200"
                            android:fontFamily="@font/ps_regular"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/background_layout_white_radius_20"
                android:padding="16dp"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="210dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <LinearLayout
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.333"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/ps_regular"
                                android:gravity="center_vertical"
                                android:text="전화번호"
                                android:textColor="@color/toss_black_150"
                                android:textSize="21dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="end"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:id="@+id/homeAccount_textView_phoneNumber"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="000-0000-0000"
                                android:textColor="@color/toss_black_150"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="21dp"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.1dp"
                        android:background="@color/toss_black_100" />
                    <LinearLayout
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:id="@+id/homeAccount_layout_modifySex"
                        android:background="@drawable/ripple_white_radius_20"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.333"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="성별"
                                android:textColor="@color/toss_black_500"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="21dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="end"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:id="@+id/homeAccount_textView_sex"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="    "
                                android:textColor="@color/toss_black_500"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="21dp"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.1dp"
                        android:background="@color/toss_black_100" />
                    <LinearLayout
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:id="@+id/homeAccount_layout_modifyBirthday"
                        android:background="@drawable/ripple_white_radius_20"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.333"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="생년월일"
                                android:textColor="@color/toss_black_500"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="21dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="end"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:id="@+id/homeAccount_textView_birthday"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="YYYY-MM-dd"
                                android:textColor="@color/toss_black_500"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="21dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/background_layout_white_radius_20"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="32dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="@drawable/ripple_white_radius_20"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/homeAccount_btn_modifyPassword"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.333"
                        android:fontFamily="@font/ps_regular"
                        android:gravity="center_vertical"
                        android:text="비밀번호 변경"
                        android:textColor="@color/toss_black_500"
                        android:textSize="21dp" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.1dp"
                        android:background="@color/toss_black_100" />
                    <TextView
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="@drawable/ripple_white_radius_20"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/homeAccount_btn_logoutUser"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.333"
                        android:fontFamily="@font/ps_regular"
                        android:gravity="center_vertical"
                        android:text="로그아웃"
                        android:textColor="@color/toss_black_500"
                        android:textSize="21dp" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.1dp"
                        android:background="@color/toss_black_100" />
                    <TextView
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="@drawable/ripple_white_radius_20"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/homeAccount_btn_deleteUser"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.333"
                        android:fontFamily="@font/ps_regular"
                        android:gravity="center_vertical"
                        android:text="회원 탈퇴"
                        android:textColor="@color/iphone_red_200"
                        android:textSize="21dp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"/>
        </LinearLayout>
    </com.factor.bouncy.BouncyNestedScrollView>
</LinearLayout>
