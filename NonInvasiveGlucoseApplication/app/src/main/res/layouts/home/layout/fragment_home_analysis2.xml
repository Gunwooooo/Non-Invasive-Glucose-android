<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeAnalysis2Fragment"
    android:orientation="vertical"
    android:weightSum="1">

    <com.google.android.material.tabs.TabLayout
        app:tabRippleColor="@android:color/transparent"
        app:tabTextAppearance="@style/tab_text"
        android:id="@+id/homeAnalysis2_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/StatusBarColor"
        app:tabTextColor="@color/toss_black_700"
        app:tabIndicatorColor="@color/toss_black_700"
        app:tabIndicatorHeight="2dp"
        app:tabGravity="fill">
        <!-- TabItem은 탭메뉴 하나를 의미한다. -->
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체온" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="심박수" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혈당" />
    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="0.33"
            android:backgroundTint="@color/toss_blue_100">
            <TextView
                android:id="@+id/homeAnalysis2_btn_7day"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7일"
                android:textSize="21dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/toss_blue_200"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="0.33">
            <TextView
                android:id="@+id/homeAnalysis2_btn_30day"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="30일"
                android:textSize="21dp"
                android:textColor="@color/toss_black_500"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="0.33">
            <TextView
                android:id="@+id/homeAnalysis2_btn_90day"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="90일"
                android:textSize="21dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/toss_black_500"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.87">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/homeAnalysis2_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>