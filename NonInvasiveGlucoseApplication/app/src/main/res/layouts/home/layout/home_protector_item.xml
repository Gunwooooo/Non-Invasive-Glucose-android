<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/homeProtectorItem_layout_Info"
        android:background="@drawable/ripple_white_radius_20"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:gravity="start"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2">
            <com.github.pavlospt.roundedletterview.RoundedLetterView
                android:layout_gravity="center"
                android:id="@+id/homeProtectorItem_rlv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:rlv_backgroundColorValue="@color/iphone_blue_500"
                app:rlv_titleColor="@android:color/white"
                app:rlv_titleSize="30dp"
                app:rlv_titleText="김" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.6">
            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/homeProtectorItem_textView_nickname"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="OO"
                android:textSize="18dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_600"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="님"
                android:textSize="18dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_700"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2">
            <TextView
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/homeProtectorItem_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="해제"
                android:textSize="18dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>