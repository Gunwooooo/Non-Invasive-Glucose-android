<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/homeProtectorItem_layout_Info"
        android:background="@drawable/ripple_white_radius_20"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:gravity="start"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <ImageView
                android:id="@+id/homeProtectorItem_imageView_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/homeProtectorItem_textView_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:fontFamily="@font/ps_bold"
                    android:textColor="@color/toss_black_700"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세정보 보기"
                android:textSize="16dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:gravity="end"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2">
            <Button
                android:id="@+id/homeProtectorItem_btn_delete"
                android:background="@drawable/btn_border_light_gray2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="해제"
                android:textSize="14dp"
                android:stateListAnimator="@null"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>