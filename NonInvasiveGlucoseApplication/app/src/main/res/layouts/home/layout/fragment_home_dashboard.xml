<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeDashboardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <LinearLayout
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/homeDashboard_textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_bold"
            android:gravity="center_vertical"
            android:text="2022.10.27"
            android:textColor="@color/toss_black_170"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/homeDashboard_btn_calendar"
            android:layout_marginBottom="4dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/calendar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="0dip"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="김건우님의 정보"
                android:textColor="@color/white"
                android:fontFamily="@font/ps_bold"
                android:textSize="27dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="end"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3">
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/homeDashboard_btn_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_manage_accounts_24"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ps_bold"
            android:gravity="bottom"
            android:text="체온"
            android:textColor="@color/white"
            android:textSize="21dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/iphone_gray_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_margin="16dp"
                    android:id="@+id/homeDashboard_thermometerChart"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/black" />
                <LinearLayout
                    android:padding="16dp"
                    android:backgroundTint="@color/iphone_gray_background"
                    android:background="@drawable/my_ripple"
                    android:id="@+id/homeDashboard_btn_thermometer"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:weightSum="1">
                    <LinearLayout
                        android:background="@drawable/image_radius_border_thermometer"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/thermometer"
                            app:tint="@color/white" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.04"/>
                    <LinearLayout
                        android:padding="1dp"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.43"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5">
                            <TextView
                                android:gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="체온"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="19dp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="오후 2시 37분"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="16dp"
                                android:textColor="@color/toss_black_170"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="+0.12"
                            android:gravity="left|center_vertical"
                            android:textSize="16dp"
                            android:fontFamily="@font/ps_regular"
                            android:textColor="@color/text_blue_200"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.22">
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="36.5"
                            android:textColor="@color/white"
                            android:fontFamily="@font/ps_bold"
                            android:textSize="24dp"/>
                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" ℃"
                            android:textColor="@color/toss_black_170"
                            android:fontFamily="@font/ps_regular"
                            android:textSize="18dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="심박수"
            android:textColor="@color/white"
            android:fontFamily="@font/ps_bold"
            android:textSize="21dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/iphone_gray_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_margin="16dp"
                    android:id="@+id/homeDashboard_heartChart"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/black" />
                <LinearLayout
                    android:padding="16dp"
                    android:backgroundTint="@color/iphone_gray_background"
                    android:background="@drawable/my_ripple"
                    android:id="@+id/homeDashboard_btn_heart"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:weightSum="1">
                    <LinearLayout
                        android:background="@drawable/image_radius_border_heart"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15">
                        <ImageView
                            android:padding="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/heart"
                            app:tint="@color/white" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.04"/>
                    <LinearLayout
                        android:padding="1dp"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.43"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5">
                            <TextView
                                android:gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="심박수"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="19dp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="오후 2시 37분"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="16dp"
                                android:textColor="@color/toss_black_170"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="-0.14"
                            android:gravity="left|center_vertical"
                            android:textSize="16dp"
                            android:fontFamily="@font/ps_regular"
                            android:textColor="@color/text_red_500"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.22">
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="81"
                            android:textColor="@color/white"
                            android:fontFamily="@font/ps_bold"
                            android:textSize="24dp"/>
                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" bpm"
                            android:textColor="@color/toss_black_170"
                            android:fontFamily="@font/ps_regular"
                            android:textSize="18dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="혈당"
            android:textColor="@color/white"
            android:fontFamily="@font/ps_bold"
            android:textSize="21dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/iphone_gray_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_margin="16dp"
                    android:id="@+id/homeDashboard_glucoseChart"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/black" />
                <LinearLayout
                    android:padding="16dp"
                    android:backgroundTint="@color/iphone_gray_background"
                    android:background="@drawable/my_ripple"
                    android:id="@+id/homeDashboard_btn_glucose"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:weightSum="1">
                    <LinearLayout
                        android:background="@drawable/image_radius_border_glucose"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15">
                        <ImageView
                            android:padding="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/glucose"
                            app:tint="@color/white" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.04"/>
                    <LinearLayout
                        android:padding="1dp"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.43"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5">
                            <TextView
                                android:gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="혈당"
                                android:fontFamily="@font/ps_bold"
                                android:textSize="19dp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="오후 2시 37분"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="16dp"
                                android:textColor="@color/toss_black_170"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="+0.13"
                            android:gravity="left|center_vertical"
                            android:textSize="16dp"
                            android:fontFamily="@font/ps_regular"
                            android:textColor="@color/text_blue_200"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.22">
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="78"
                            android:textColor="@color/white"
                            android:fontFamily="@font/ps_bold"
                            android:textSize="24dp"/>
                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" mg/dL"
                            android:textColor="@color/toss_black_170"
                            android:fontFamily="@font/ps_regular"
                            android:textSize="16dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>
