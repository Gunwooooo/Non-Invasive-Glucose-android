<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeDashboardFragment"
    android:weightSum="1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/homeDashboard_mainChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:background="@drawable/top_radius_border"
        android:weightSum="1"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.06"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2022.10.27"
                android:textColor="@color/toss_black_700"
                android:fontFamily="@font/ps_bold"
                android:textSize="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.06"/>
        <LinearLayout
            android:id="@+id/homeDashboard_btn_thermometer"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.26"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <LinearLayout
                android:background="@drawable/image_radius_border_thermometer"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.16">
                <ImageView
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/thermometer"
                    app:tint="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.03"/>
            <LinearLayout
                android:padding="1dp"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.43"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="체온"
                        android:fontFamily="@font/ps_bold"
                        android:textSize="21dp"
                        android:textColor="@color/toss_black_600"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="오후 2시 37분"
                        android:fontFamily="@font/ps_regular"
                        android:textSize="21dp"
                        android:textColor="@color/toss_black_200"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.37">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="36.5"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="℃"
                    android:textColor="@color/toss_black_600"
                    android:fontFamily="@font/ps_regular"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/homeDashboard_btn_heart"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.26"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <LinearLayout
                android:background="@drawable/image_radius_border_heart"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.16">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/heart"
                    app:tint="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>
            <LinearLayout
                android:padding="1dp"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.43"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="심박수"
                        android:fontFamily="@font/ps_bold"
                        android:textSize="21dp"
                        android:textColor="@color/toss_black_600"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="오후 2시 37분"
                        android:fontFamily="@font/ps_regular"
                        android:textSize="21dp"
                        android:textColor="@color/toss_black_200"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.37">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="81"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="bpm"
                    android:textColor="@color/toss_black_600"
                    android:fontFamily="@font/ps_regular"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/homeDashboard_btn_glucose"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.26"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <LinearLayout
                android:background="@drawable/image_radius_border_glucose"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.16">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/glucose"
                    app:tint="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>
            <LinearLayout
                android:padding="1dp"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.43"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="혈당"
                        android:fontFamily="@font/ps_bold"
                        android:textSize="21dp"
                        android:textColor="@color/toss_black_600"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="오후 2시 37분"
                        android:fontFamily="@font/ps_regular"
                        android:textSize="21dp"
                        android:textColor="@color/toss_black_200"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.37">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="78"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="mg/dL"
                    android:textColor="@color/toss_black_600"
                    android:fontFamily="@font/ps_regular"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>