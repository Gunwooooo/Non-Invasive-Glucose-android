<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeDashboardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/android_blue_100">



    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect me with health"
                android:textColor="@color/black"
                android:fontFamily="@font/ps_bold"
                android:textSize="21dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="웰링크와 함께 건강관리를 해보세요"
                android:textColor="@color/iphone_gray_150"
                android:fontFamily="@font/ps_regular"
                android:textSize="14dp" />
            <TextView
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="내 정보"
                android:textColor="@color/toss_black_700"
                android:fontFamily="@font/ps_bold"
                android:textSize="21dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/ripple_android_blue_100_radius_20"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/homeDashboard_btn_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_settings_24"
                    app:tint="@color/black" />
            </LinearLayout>
            <ImageView
                android:background="@color/android_blue_100"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/background_image_dashboard" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_layout_white_radius_20"
        android:layout_width="match_parent"
        android:layout_height="96dp">
        <LinearLayout
            android:layout_margin="3dp"
            android:paddingStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/homeDashboard_btn_account"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_white_radius_20">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/icon_color_profile" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/homeDashboard_textView_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ps_bold"
                            android:gravity="center_vertical"
                            android:text="OOO"
                            android:textColor="@color/toss_black_500"
                            android:textSize="18dp" />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="님"
                            android:textColor="@color/toss_black_700"
                            android:fontFamily="@font/ps_bold"
                            android:textSize="18dp"/>
                        <LinearLayout
                            android:focusable="false"
                            android:clickable="false"
                            android:gravity="center"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/background_layout__toss_black_100_radius_20"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/homeDashboard_textView_age"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="38세"
                                android:textColor="@color/iphone_gray_500"
                                android:fontFamily="@font/ps_regular"
                                android:textSize="18dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/homeDashboard_textView_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남성"
                            android:textColor="@color/toss_black_200"
                            android:fontFamily="@font/ps_regular"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
