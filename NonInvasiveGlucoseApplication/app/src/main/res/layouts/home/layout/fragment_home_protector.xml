<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".home.HomeProtectorFragment"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보호자"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24dp"
                    android:textColor="@color/toss_black_700" />

                <TextView
                    android:singleLine="false"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="보호자로 등록된 사람은 내 건강 정보를 볼 수 있어요"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_500"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/homeProtector_layout_protectorInfo"
                    android:background="@drawable/my_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:gravity="start"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/policeman" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.63">
                        <TextView
                            android:id="@+id/homeProtectingItem_textView_phoneNumber"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="김건우 님"
                            android:textSize="21dp"
                            android:fontFamily="@font/ps_regular"
                            android:textColor="@color/toss_black_700"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.17">
                        <TextView
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/homeProtector_btn_delete"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="해제"
                            android:textSize="18dp"
                            android:fontFamily="@font/ps_regular"
                            android:textColor="@color/toss_black_200"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/homeProtector_layout_protectorAdd"
                    android:visibility="visible"
                    android:background="@drawable/my_ripple"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="보호자 추가하기"
                        android:textSize="18dp"
                        android:fontFamily="@font/ps_regular"
                        android:textColor="@color/toss_black_700"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add"/>
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보호 대상자"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24dp"
                    android:textColor="@color/toss_black_700" />

                    <TextView
                        android:id="@+id/homeProtector_textView_protectingCount"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5명"
                        android:fontFamily="@font/ps_regular"
                        android:textColor="@color/toss_black_600"
                        android:textSize="32dp"/>

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="보호 대상자의 건강 정보를 체크하세요"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_500"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/homeProtector_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>