<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeProtectorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/policeman"/>

                <TextView
                    android:layout_marginStart="36dp"
                    android:id="@+id/homeProtectingItem_textView_phoneNumber"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="010-****-3423"
                    android:textSize="21dp"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_700"/>

                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="36dp"
                    android:id="@+id/homeProtector_btn_delete"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="해제"
                    android:textSize="18dp"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_200"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
                <TextView
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/home_textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보호 대상자"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24dp"
                    android:textColor="@color/toss_black_700" />
            </LinearLayout>
            <LinearLayout
                android:gravity="right|bottom"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginEnd="16dp">
                <ImageView
                    android:id="@+id/homeProtector_btn_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_baseline_add_24"
                    app:tint="@color/toss_blue_200" />
            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:id="@+id/homeProtector_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>



</FrameLayout>