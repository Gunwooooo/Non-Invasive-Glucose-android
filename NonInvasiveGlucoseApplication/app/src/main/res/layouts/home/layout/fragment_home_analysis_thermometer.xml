<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeAnalysisThermometerFragment"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6">
        <com.github.mikephil.charting.charts.CandleStickChart
            android:id="@+id/homeThermometer_candleChart_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="16dp"
        android:background="@drawable/top_radius_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2022.10.27"
                android:textColor="@color/toss_black_700"
                android:fontFamily="@font/ps_bold"
                android:textSize="24dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.06"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:background="@drawable/layout_border_thermometer"
                android:layout_width="0dip"
                android:layout_height="32dp"
                android:layout_weight="0.02"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.63">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="최고 체온"
                    android:textSize="21dp"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_600"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/homeAnalysisThermometer_textView_maxValue"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="37.7"
                    android:textSize="21dp"
                    android:fontFamily="@font/ps_bold"
                    android:textColor="@color/text_value_normal"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" ℃"
                    android:textSize="18dp"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_200"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:background="@drawable/layout_border_thermometer"
                android:layout_width="0dip"
                android:layout_height="32dp"
                android:layout_weight="0.02"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.63">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="최저 체온"
                    android:textSize="21dp"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_600"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/homeAnalysisThermometer_textView_minValue"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="35.3"
                    android:textSize="21dp"
                    android:fontFamily="@font/ps_bold"
                    android:textColor="@color/text_value_normal"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" ℃"
                    android:textSize="18dp"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_200"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.09"/>
    </LinearLayout>
</LinearLayout>