<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeAnalysisThermometerFragment"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"


        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <TextView
                android:layout_marginStart="32dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Investment Growth"
                android:textSize="21dp"
                android:fontFamily="@font/ps_bold"
                android:textColor="@color/toss_black_500"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3">
            <TextView
                android:layout_marginEnd="32dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="36.3℃"
                android:textSize="24dp"
                android:textColor="@color/toss_black_700"
                android:fontFamily="@font/ps_bold"
                android:gravity="center_vertical|right"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="0.33">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Daily"
                android:textSize="21dp"
                android:textColor="@color/toss_black_500"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="0.33">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Monthly"
                android:textSize="21dp"
                android:textColor="@color/toss_black_500"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="0.33">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Yearly"
                android:textSize="21dp"
                android:textColor="@color/toss_black_500"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/homeThermometer_lineChart_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/toss_black_150"
        />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:background="@drawable/layout_border_blue"
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_weight="0.02"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Canada"
                android:textSize="21dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_500"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.23">
            <TextView
                android:gravity="center_vertical|right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="36.7℃"
                android:textSize="21dp"
                android:fontFamily="@font/ps_bold"
                android:textColor="@color/toss_black_500"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:background="@drawable/layout_border_red"
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_weight="0.02"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Canada"
                android:textSize="21dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_500"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.23">
            <TextView
                android:gravity="center_vertical|right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="36.3℃"
                android:textSize="21dp"
                android:fontFamily="@font/ps_bold"
                android:textColor="@color/toss_black_500"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>