<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.HomeAnalysisFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/homeAnalysis_tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/StatusBarColor"
        app:tabGravity="start"
        app:tabIndicatorColor="@color/toss_black_700"
        app:tabIndicatorHeight="2dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabTextAppearance="@style/tab_text"
        app:tabTextColor="@color/toss_black_700">
        <!-- TabItem은 탭메뉴 하나를 의미한다. -->
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체온" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="심박수" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혈당" />
    </com.google.android.material.tabs.TabLayout>

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="5dp"-->
    <!--        android:background="@drawable/toolbar_dropshadow"-->
    <!--        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_weight="0.33"
            android:backgroundTint="@color/toss_blue_100"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/homeAnalysis_btn_7day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="7일"
                android:textColor="@color/toss_blue_200"
                android:textSize="21dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="0.33"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/homeAnalysis_btn_30day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="30일"
                android:textColor="@color/toss_black_500"
                android:textSize="21dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.33"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/homeAnalysis_btn_90day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="90일"
                android:textColor="@color/toss_black_500"
                android:textSize="21dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/homeAnalysis_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>